/*精品*/
@import "../../../template/goods-list/index.wxss";
@import "../../../template/banner/index.wxss";
/*推荐分类  */
.fruitsMendImg{
  width: 50%;
  height: 200rpx;
  padding:10rpx;
  box-sizing:border-box;
}
.latestOnlineBox {
  width:100%;

  box-sizing: border-box;
} 
.fruitsMendTow{
  display:flex;
  justify-content: space-around;
  padding:6rpx; 
   border-bottom:2rpx solid #dddddd;
}
.fruitsMendTowBox{
  width:32%;
  display: inline-block;
  margin-left:8rpx;
  padding-bottom: 40rpx;
  padding-top: 10rpx;
}
.fruitsMendTowBox view{
  text-align: center;
  /* line-height: 18rpx; */
}
.fruitsMendImgT{
  width:100%;
  height:240rpx;
  box-sizing:border-box;
  margin-bottom: 20rpx;
}
/*首页产品  */
.fruitsProBoxImg{
  width: 200rpx;
  height: 180rpx;
  padding: 10rpx 20rpx;
}
.fruitsProBox{
  display: flex;
  border-bottom:2rpx solid #dddddd;
  padding-bottom:6rpx;
}
.fruitsProBotTop{
  width: 538rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  margin:10rpx 0 50rpx 0;
}
.fruitsProBoxText{
  font-size: 26rpx;
  margin-right: 14rpx;
  color: #fe860f;
  letter-spacing:4rpx;
}    
.fruitsProBoxTextOne{
  color: #a8a8a8; 
  font-size: 26rpx;
  letter-spacing:8rpx;
}
/* 轮播图 */
.banner {
  width: 100%;
  height:360rpx;
}

/* 预约 start */
.make {
    width: 100%;
    height: 88rpx;
    background: #fff;
    margin-top: 20rpx;
}

.makeTal {
    width: 100%;
    height: 88rpx;
    position: relative;
}

.makeimage {
    width: 28rpx;
    height: 26rpx;
    margin: 30rpx 16rpx 0 26rpx;
}

.maketext {
    line-height: 88rpx;
    color: #fe860f;
}

.makebut {
    position: absolute;
    width: 88rpx;
    height: 36rpx;
    top: 26rpx;
    right: 30rpx;
    color: #ff8804;
    border: 1rpx solid #ff8804;
    text-align: center;
    line-height: 32rpx;
    border-radius: 5rpx;
    font-size: 24rpx;
}

/* 预约 end  */

/* 首页公共 */
page,view,text,image{
  box-sizing: border-box;
} 
.bar {
  width: 100%;
  height:48rpx;
  position:relative;
  background: #fff;
}
.barView{
  width:150rpx;
  height:100%;
  color:#fff;
  background: #fb5660;
  font-size:28rpx;
  text-align: center;
  line-height:48rpx;
  margin:auto;
  /* line-height:88rpx; */
}
.classView{
  width:100%;
  /* height:334rpx; */
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  padding-bottom:30rpx;
}
