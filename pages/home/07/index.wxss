/**首页 index.wxss**/

page {
    background-color: #f4f4f4;
}

/* 轮播图 start */

.swiper {
    height: 360rpx;
}

.slideImage {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

/* 轮播图 end  */


/* 预约 start */
.make {
    width: 100%;
    height: 88rpx;
    background: #fff;
    margin-top: 20rpx;
}

.makeTal {
    width: 100%;
    height: 88rpx;
    position: relative;
}

.makeimage {
    width: 28rpx;
    height: 26rpx;
    margin: 30rpx 16rpx 0 26rpx;
}

.maketext {
    line-height: 88rpx;
    color: #fe860f;
}

.makebut {
    position: absolute;
    width: 88rpx;
    height: 36rpx;
    top: 26rpx;
    right: 30rpx;
    color: #ff8804;
    border: 1rpx solid #ff8804;
    text-align: center;
    line-height: 32rpx;
    border-radius: 5rpx;
    font-size: 24rpx;
}

/* 预约 end  */


/* 标题 start */

.shopTitle {
    height: 40rpx;
    line-height: 40rpx;
    color: #626262;
    font-size: 32rpx;
    margin: 30rpx 30rpx 20rpx 30rpx;
    border-left: 10rpx solid #8e98ff;
}

.shopTitles {
    margin-left: 20rpx;
}

/* 标题 end  */


/* 精选 start */

.recommendList {
    margin: 0 0 50rpx 10rpx;
}

.jxRecommendList {
    width: 228rpx;
    height: 340rpx;
    margin-right: 16rpx;
    background: #fff;
    display: inline-block;
}

.jxImagecon {
    width: 228rpx;
    height: 200rpx;
    border-radius: 4rpx;
}

.jxImage {
    width: 200rpx;
    height: 200rpx;
    margin: 20rpx 14rpx 10rpx 14rpx;
    vertical-align: middle;
}

.recommendTitle {
    margin-top: 20rpx;
    font-size: 30rpx;
    color: #333;
    text-align: center;
    line-height: 1.6;
}
/* 精选 end  */

/* 热卖 start */

.twoShopList {
    margin: 10rpx 10rpx;
    background: #fff;
}

.shopList {
    float: left;
    width: 345rpx;
    margin: 10rpx;
    background: #fff;
}

.twoShopImg {
    width: 280rpx;
    height: 260rpx;
    margin: 35rpx 32rpx 20rpx 32rpx;
    border-radius: 4rpx;
}

.shopListTitleBg {
    height: 46rpx;
    line-height: 46rpx;
    font-size: 30rpx;
    color: #666;
}

.bgTitle {
    width: 342rpx;
    padding: 0 15rpx;
}

.shopPrice {
    margin-left: 20rpx;
    color: #e33b2e;
}

.shopNum {
    margin-right: 20rpx;
    color: #a8a8a8;
    font-size: 24rpx;
}

.buyNow {
    background: #889fff;
    width: 280rpx;
    margin: 16rpx auto 30rpx;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    padding: 6rpx 0;
}