/**index.wxss**/
swiper{
  max-height: 300rpx;
}
.indexBanner{
  overflow: hidden;
}
.indexBanner image{
  height: 300rpx;
  width: 100%;
}
.category{
  width: 100%; 
  display: flex;
  /* position: relative; */
  flex-wrap: nowrap;
  flex-direction: row;
  overflow-x: scroll;
  background: red;
}


/* 预约 start */

.make {
    width: 100%;
    height: 88rpx;
    background: #fff;
    /* margin-top: 20rpx; */
}
.makeTal {
    width: 100%;
    height: 88rpx;
    position: relative;
}
.makeimage {
    width: 28rpx;
    height: 26rpx;
    margin: 30rpx 16rpx 0 26rpx;
}
.maketext {
    line-height: 88rpx;
    color: #fe860f;
}
.makebut {
    position: absolute;
    width: 88rpx;
    height: 36rpx;
    top: 26rpx;
    right: 30rpx;
    color: #ff8804;
    border: 1rpx solid #ff8804;
    text-align: center;
    line-height: 32rpx;
    border-radius: 5rpx;
    font-size: 24rpx;
}
/* 预约 end  */


/*推荐分类*/
.recommend {
  width: 100%;
  /* height: 200rpx; */
  position: relative;
  box-shadow: 0 -2rpx 2rpx rgba(255,255,255,.2);
}
 .recommend_bg{
  width: 100%;
  height: 240rpx;
} 
.scroll_view{
  left: 0;
  top: 0;
  position: absolute;
}
.recommend_item {
  width: 25%;
  display: inline-block;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}
.recommend_item image {
  width: 120rpx;
  height: 120rpx;
  margin: 50rpx 0 20rpx 0;
}
/*推荐分类 end */

.special{
  position: relative;
  width: 100%;
  overflow: hidden;
  box-shadow: 0 2rpx 1rpx rgba(255,255,255,.4);
}
.special_bg{
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
  bottom: 0;
  z-index: 0;
}
.special_bg_title{
  position: relative;
  width: 100%;
  z-index: 2;
  bottom: 0;
  height: 228rpx;
}
.special_bg_titleWords{
  position: absolute;
  bottom: 6rpx;
  z-index: 3;
  color: #eadbad;
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
}
/* 特价专区 end */

/* 热门项目 start */
.hotItem{
  background: #1d1b1e;
  width: 100%;
  padding-left:30rpx;
}
.hotItem_title{
  font-size: 30rpx;
  color: #fff;
  margin-right: 30rpx;
  padding: 20rpx 0;
}
.hotItem_list{
  width: 210rpx;
  margin-right: 30rpx;
  padding-bottom: 30rpx;
  float: left;
}
.hotItem_list image{
  width: 100%;
  height: 210rpx;
}
.hotItem_list_name{
  font-size: 28rpx;
  color: #fff;
  margin: 10rpx 0;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.hotItem_list_price{
  color:#e10404;
  font-size: 34rpx;
}
.hotItem_list_price text{
  font-size: 26rpx;
  margin-right: 10rpx;
}
/* 热门项目 end */
