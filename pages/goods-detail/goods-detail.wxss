/* 点击切换 start */
.promotion_teb{
  background:#fff;
  width: 100%;
}

.but_nav {
  width: 750rpx;
  height: 98rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fb5660;
}
.but_nav view {
  float: left;
  line-height: 98rpx;
  height: 100%;
  text-align: center;

}
.describe {
  width: 100%;
  padding:20rpx;
  background: #fff;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.s-item{
  font-size: 30rpx;
  color: #343434;
}
.promotion_bot{
  display: flex;
  justify-content:space-between;
  font-size: 24rpx;
  color: #989898;
  margin-bottom: 20rpx;
}
.priceNow{
  font-size:40rpx;
  color:#ff0077;
}
.priceMark{
  font-size: 26rpx;
  color: #989898;
  margin: 0 10rpx;
  text-decoration: line-through;
}
.priceIcon{
  background: #e53e30;
  font-size: 22rpx;
  color: #fff;
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 10rpx;
  margin: 0 6rpx;
}
.fbicon {
  width: 120rpx;
  border-right: 1px solid #f6f6f6;
  background: #fff;
}
.fbicon image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
}
.add_cart {
   width:254rpx; 
  background: #f98e90;
  color:#fff;
}
.buy_now {
   width:254rpx; 
  background: #fb5660;
  color: #fff;
  float: right;
}
.attribute {
  height: 100%;
  top: 0;
}
.attribute, .close, .popup {
  position: fixed;
  left: 0;
  width: 100%;
}
.close {
  height: 100%;
  background: #000;
  opacity: 0.5;
  z-index: 1;
}

/* 点击弹出购买信息 start */
.popup {
  max-height:800rpx;
  min-height:400rpx;
  background: #fff;
  z-index: 2;
  bottom: 0;
}
.exhibition {
  /* border-bottom: 1px solid #e5e5e5; */
  height: 200rpx;
  position: relative;
  margin-left: 24rpx;
  
}
.popup_image {
  width: 240rpx;
  height: 240rpx;
  border: 1rpx solid #e5e5e5;
  position: absolute;
  top: -100rpx;
  background: #fff;
  border-radius: 10rpx;
}
.popup_image image{
  width:100%;
  height:100%;
}
.popup_text {
  position: absolute;
  left: 280rpx;
  width: 400rpx;
  height: 100%;
}
.popup_moeny {
  padding-top: 10rpx;
  color: #ff0077;
  font-size: 26rpx;
  line-height:52rpx;
}
.popup_stock {
  color: #4c4c4c;
  font-size:26rpx;
  line-height:42rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
/*尺码 start*/
.shops_classify {
  margin-left: 24rpx;
  background: #fff;
  font-size: 28rpx;
  max-height:350rpx;
  min-height: 0;
  overflow-y: auto;
}
.shops_classify .color_ify {
  color: #666;
  font-size: 28rpx;
}
.shops_classify_title {
  padding:10rpx 0;
}
.shops_classify_title view {
  display: inline-block;
  margin: 0 12rpx 12rpx 0;
  min-width: 150rpx;
  padding: 0 20rpx;
  height: 60rpx;
  border-radius:8rpx;
  background: #fff;
  border:1px solid #ddd;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
}
.shops_classify_title .standard {
  background: #fb5660;
  color: #fff;
  border-radius:8rpx;
}
