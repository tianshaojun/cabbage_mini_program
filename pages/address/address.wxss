.items {
  display: flex;
  justify-content: space-between;
  height: 88rpx;
  line-height: 88rpx;
  width: 100%;
  overflow: hidden;
  border-bottom: 1rpx solid #e5e5e5;
}

.items:last-child {
  border-bottom: none;
}

.items_lf {
  color: #323232;
  font-size: 28rpx;
  width: 140rpx;
}

.items_rig {
  padding: 0 20rpx;
  width: 522rpx;
}

.items_rig input {
  height: 88rpx;
  line-height: 88rpx;
  display: block;
  width: 100%;
}

.items_del {
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  font-size: 40rpx;
  line-height: 40rpx;
  text-align: center;
  overflow: hidden;
  margin: 24rpx 24rpx 0 0;
}

.hidden {
  visibility: hidden;
}

.tips {
  padding: 10rpx 24rpx 40rpx 24rpx;
}

