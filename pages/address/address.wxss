page {
  background: #eee;
  line-height: 1.6;
  letter-spacing: 1px;
  font-size: 28rpx;
  color: #666;
}

view, page, text, label, radio {
  box-sizing: border-box;
}

.but {
  width: 95%;
}

/* 地址列表 end */

.listsBox {
  padding-bottom: 110rpx;
}

.addnull {
  width: 100%;
  border: 2rpx solid #fff;
}

.addressList {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 22rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.label {
  display: flex;
  align-items: center;
  flex: 8;
}

.address {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.editBtn {
  color: #f2302f;
  /* flex: 1; */
}

.lists button[type="default"] {
  color: #f2302f;
  background: #fff;
  position: fixed;
  width: 100%;
  bottom: 0;
}

/* 地址列表 end */

